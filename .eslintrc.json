{
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "mocha": true,
      "phantomjs": true
    },
    "plugins": [
      "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
      "camelcase": 2,
      "eol-last": 2,
      "max-len": [2, 120, 4],
      "quotes": [2, "single", { "allowTemplateLiterals": true }],
      "no-mixed-spaces-and-tabs": 2,
      "space-infix-ops": 0,
      "key-spacing": 2,
      "comma-spacing": 2,
      "no-multi-spaces": 0,
      "no-trailing-spaces": 0,
      "no-unused-vars": 2,
      "keyword-spacing": 2,
      "space-before-blocks": 2,
      "no-underscore-dangle": 0,
      "space-before-function-paren": [2, {
        "anonymous": "always",
        "named": "never"
      }],
      "no-console": 0,
      "no-undef": "error",
      "semi": 2,
      "no-var": 1,
      "eqeqeq": [2, "always"]
    }
  }
