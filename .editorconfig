# http://editorconfig.org
root = true
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
[*.js]
spaces_around_operators = true
spaces_around_brackets = inside
indent_brace_style = K&R
quote_type = single
max_line_length = 120
[*.html]
max_line_length = off
indent_size = 4
[*.md]
trim_trailing_whitespace = false
